@using EvaluacionDesempenoAB.Models
@model IEnumerable<UsuarioEvaluado>

@{
    ViewData["Title"] = "Usuarios a mi cargo";
}

<h2 class="mt-4">Usuarios a mi cargo</h2>

@{
    var cedulaFiltro = ViewData["CedulaFiltro"] as string;
    var hayUsuarios = Model.Any();
}

<div class="row g-3 mt-1 align-items-end">
    <div class="col-12 col-lg-6">
        <form method="get" class="d-flex flex-wrap gap-2 align-items-end">
            <div class="flex-grow-1">
                <label class="form-label mb-1" for="cedulaFiltro">Filtrar por cédula</label>
                <input id="cedulaFiltro"
                       name="cedula"
                       class="form-control"
                       value="@cedulaFiltro"
                       placeholder="Ingresa la cédula" />
            </div>
            <div class="d-flex gap-2">
                <button type="submit" class="btn btn-outline-secondary">Filtrar</button>
                @if (!string.IsNullOrWhiteSpace(cedulaFiltro))
                {
                    <a class="btn btn-outline-danger" asp-action="Index">Limpiar</a>
                }
            </div>
        </form>
    </div>

    <div class="col-12 col-lg-6">
        <form asp-controller="Evaluaciones" asp-action="Nueva" method="get" class="d-flex flex-wrap gap-2 align-items-end justify-content-lg-end">
            <input type="hidden" id="usuarioEvaluacionId" name="usuarioId" />
            <button type="submit" class="btn btn-primary" id="iniciarEvaluacionBtn" @(hayUsuarios ? "" : "disabled")>
                Iniciar evaluación
            </button>
            <button type="button"
                    class="btn btn-outline-primary d-none"
                    id="solicitarActivacionBtn"
                    data-url="@Url.Action("SolicitarActivacion", "Usuarios")">
                Solicitar Activación de Evaluación
            </button>
        </form>
    </div>
</div>

@if (!hayUsuarios)
{
    <div class="alert alert-info mt-3">
        No se encontraron usuarios asignados a tu nombre como evaluador.
        <br />
        Verifica en Dataverse que la columna
        <code>crfb7_evaluadorid</code> de los usuarios tenga tu nombre
        EXACTAMENTE como aparece en <code>crfb7_nombredeusuario</code>.
    </div>
}
else
{
    <div class="table-responsive mt-3" style="max-height: 60vh; overflow-y: auto;">
        <table class="table table-striped table-bordered mb-0">
            <thead class="table-light">
                <tr>
                    <th>Seleccionar</th>
                    <th>Nombre</th>
                    <th>Cédula</th>
                    <th>Cargo</th>
                    <th>Gerencia</th>
                    <th>Correo</th>
                    <th>Inicio de contrato</th>
                    <th>Finalización contrato</th>
                    <th>Finalización periodo de prueba</th>
                </tr>
            </thead>
            <tbody>
            @foreach (var u in Model)
            {
                <tr>
                    <td class="text-center">
                        <input type="checkbox"
                               class="form-check-input usuario-select"
                               aria-label="Seleccionar usuario"
                               data-id="@u.Id"
                               data-fecha-finalizacion-contrato="@(u.FechaFinalizacionContrato?.ToString("yyyy-MM-dd") ?? "")"
                               data-fecha-finalizacion-prueba="@(u.FechaFinalizacionPeriodoPrueba?.ToString("yyyy-MM-dd") ?? "")"
                               data-fecha-activacion-evaluacion="@(u.FechaActivacionEvaluacion?.ToString("yyyy-MM-dd") ?? "")" />
                    </td>
                    <td>
                        <a asp-controller="Usuarios"
                           asp-action="Detalle"
                           asp-route-id="@u.Id"
                           class="link-primary text-decoration-none">
                            @u.NombreCompleto
                        </a>
                    </td>
                    <td>@u.Cedula</td>
                    <td>@u.Cargo</td>
                    <td>@u.Gerencia</td>
                    <td>@u.CorreoElectronico</td>
                    <td>@(u.FechaInicioContrato?.ToShortDateString() ?? "-")</td>
                    <td>@(u.FechaFinalizacionContrato?.ToShortDateString() ?? "-")</td>
                    <td>@(u.FechaFinalizacionPeriodoPrueba?.ToShortDateString() ?? "-")</td>
                </tr>
            }
            </tbody>
        </table>
    </div>
}

<form id="solicitudActivacionToken" method="post" class="d-none">
    @Html.AntiForgeryToken()
</form>

@section Scripts {
    <script>
        (() => {
            const checkboxes = document.querySelectorAll('.usuario-select');
            const iniciarBtn = document.getElementById('iniciarEvaluacionBtn');
            const solicitarBtn = document.getElementById('solicitarActivacionBtn');
            const evalInputId = document.getElementById('usuarioEvaluacionId');

            const setButtonsState = (canStart, canRequest) => {
                if (iniciarBtn) {
                    iniciarBtn.disabled = !canStart;
                }

                if (solicitarBtn) {
                    if (canRequest) {
                        solicitarBtn.classList.remove('d-none');
                        solicitarBtn.disabled = false;
                    } else {
                        solicitarBtn.classList.add('d-none');
                        solicitarBtn.disabled = true;
                        solicitarBtn.textContent = 'Solicitar Activación de Evaluación';
                    }
                }
            };

            const parseDate = (value) => {
                if (!value) {
                    return null;
                }

                const date = new Date(`${value}T00:00:00`);
                return Number.isNaN(date.getTime()) ? null : date;
            };

            const isWithinWindow = (targetDate, windowDays = 20) => {
                if (!targetDate) {
                    return false;
                }

                const start = new Date(targetDate);
                start.setDate(start.getDate() - windowDays);
                const end = new Date(targetDate);

                const now = new Date();
                return now >= start && now <= end;
            };

            const isWithinActivationWindow = (activationDate, windowDays = 20) => {
                if (!activationDate) {
                    return false;
                }

                const start = new Date(activationDate);
                const end = new Date(activationDate);
                end.setDate(end.getDate() + windowDays);

                const now = new Date();
                return now >= start && now <= end;
            };

            const updateSelection = () => {
                const selected = document.querySelector('.usuario-select:checked');
                if (!evalInputId) {
                    return;
                }

                if (!selected) {
                    evalInputId.value = '';
                    setButtonsState(false, false);
                    return;
                }

                evalInputId.value = selected.dataset.id || '';
                if (solicitarBtn) {
                    solicitarBtn.dataset.userId = selected.dataset.id || '';
                }

                const fechaContrato = parseDate(selected.dataset.fechaFinalizacionContrato);
                const fechaPrueba = parseDate(selected.dataset.fechaFinalizacionPrueba);
                const fechaActivacion = parseDate(selected.dataset.fechaActivacionEvaluacion);

                const habilitadoPorFechas = isWithinWindow(fechaContrato) || isWithinWindow(fechaPrueba);
                const habilitadoPorActivacion = isWithinActivationWindow(fechaActivacion);
                const puedeIniciar = habilitadoPorFechas || habilitadoPorActivacion;

                setButtonsState(puedeIniciar, !puedeIniciar);
            };

            checkboxes.forEach((checkbox) => {
                checkbox.addEventListener('change', (event) => {
                    if (event.target.checked) {
                        checkboxes.forEach((other) => {
                            if (other !== event.target) {
                                other.checked = false;
                            }
                        });
                    }
                    updateSelection();
                });
            });

            if (solicitarBtn) {
                solicitarBtn.addEventListener('click', async () => {
                    const userId = solicitarBtn.dataset.userId;
                    const url = solicitarBtn.dataset.url;
                    const tokenInput = document.querySelector('#solicitudActivacionToken input[name="__RequestVerificationToken"]');

                    if (!userId || !url || !tokenInput) {
                        return;
                    }

                    solicitarBtn.disabled = true;
                    solicitarBtn.textContent = 'Enviando solicitud...';

                    try {
                        const response = await fetch(url, {
                            method: 'POST',
                            headers: {
                                'Content-Type': 'application/json',
                                'RequestVerificationToken': tokenInput.value
                            },
                            body: JSON.stringify({ usuarioId: userId })
                        });

                        if (!response.ok) {
                            throw new Error('Solicitud fallida');
                        }

                        solicitarBtn.textContent = 'Solicitud enviada';
                    } catch (error) {
                        solicitarBtn.disabled = false;
                        solicitarBtn.textContent = 'Reintentar solicitud';
                    }
                });
            }

            updateSelection();
        })();
    </script>
}
