@using EvaluacionDesempenoAB.ViewModels
@model EvaluacionFormularioViewModel

@{
    ViewData["Title"] = "Evaluación de desempeño";
}

<div class="container mt-4">
    <h2>Evaluación de desempeño</h2>

    <div class="card mt-3">
        <div class="card-body">
            <h5 class="card-title">@Model.NombreUsuario (@Model.CedulaUsuario)</h5>
            <p class="card-text mb-1">
                <strong>Cargo:</strong> @Model.Cargo
            </p>
            <p class="card-text mb-1">
                <strong>Gerencia:</strong> @Model.Gerencia
            </p>
            <p class="card-text mb-1">
                <strong>Nivel de evaluación:</strong> @Model.NombreNivel
            </p>
            <p class="card-text">
                <strong>Tipo de evaluación:</strong> @Model.TipoEvaluacion
            </p>
        </div>
    </div>

    <div class="mt-3">
        <h5>Escala de calificación (0 - 100)</h5>
        <table class="table table-sm table-bordered w-auto">
            <thead class="table-light">
                <tr>
                    <th>Rango</th>
                    <th>Descripción</th>
                </tr>
            </thead>
            <tbody>
                <tr class="table-danger">
                    <td>0% - 25%</td>
                    <td>Nunca</td>
                </tr>
                <tr class="table-warning">
                    <td>26% - 50%</td>
                    <td>Casi nunca</td>
                </tr>
                <tr class="table-info">
                    <td>51% - 75%</td>
                    <td>A veces</td>
                </tr>
                <tr class="table-primary">
                    <td>76% - 90%</td>
                    <td>Casi siempre</td>
                </tr>
                <tr class="table-success">
                    <td>91% - 100%</td>
                    <td>Siempre</td>
                </tr>
            </tbody>
        </table>
    </div>

    <form asp-action="Guardar" method="post" class="mt-4">
        @Html.AntiForgeryToken()

        @* Campos ocultos *@
        <input asp-for="Id" type="hidden" />
        <input asp-for="UsuarioId" type="hidden" />
        <input asp-for="NivelId" type="hidden" />
        <input asp-for="TipoEvaluacion" type="hidden" />
        <input asp-for="EvaluacionOrigenId" type="hidden" />

        <div class="mb-3">
            <label asp-for="FechaEvaluacion" class="form-label">Fecha de evaluación</label>
            <input asp-for="FechaEvaluacion" type="date" class="form-control" />
            <span asp-validation-for="FechaEvaluacion" class="text-danger"></span>
        </div>

        @for (int i = 0; i < Model.Competencias.Count; i++)
        {
            var comp = Model.Competencias[i];

            <div class="card mt-3">
                <div class="card-header">
                    <strong>@comp.Nombre</strong>
                </div>
                <div class="card-body p-0">
                    <table class="table mb-0">
                        <thead>
                            <tr>
                                <th>Comportamiento</th>
                                <th style="width: 120px;">Puntaje (0-100)</th>
                                <th>Comentario</th>
                            </tr>
                        </thead>
                        <tbody>
                        @for (int j = 0; j < comp.Comportamientos.Count; j++)
                        {
                            <tr>
                                <td>
                                    @comp.Comportamientos[j].Descripcion
                                    <input asp-for="Competencias[@i].Comportamientos[@j].ComportamientoId" type="hidden" />
                                    <input asp-for="Competencias[@i].Comportamientos[@j].Descripcion" type="hidden" />
                                </td>
                                <td>
                                    <input asp-for="Competencias[@i].Comportamientos[@j].Puntaje"
                                           type="number"
                                           min="0"
                                           max="100"
                                           class="form-control" />
                                    <span asp-validation-for="Competencias[@i].Comportamientos[@j].Puntaje" class="text-danger"></span>
                                </td>
                                <td>
                                    <input asp-for="Competencias[@i].Comportamientos[@j].Comentario"
                                           class="form-control" />
                                    <span asp-validation-for="Competencias[@i].Comportamientos[@j].Comentario" class="text-danger"></span>
                                </td>
                            </tr>
                        }
                        </tbody>
                    </table>
                </div>
            </div>
        }

        <div class="mt-4 mb-3">
            <label asp-for="ObservacionesGenerales" class="form-label">Observaciones generales</label>
            <textarea asp-for="ObservacionesGenerales" class="form-control" rows="4"></textarea>
            <span asp-validation-for="ObservacionesGenerales" class="text-danger"></span>
        </div>

        <div class="mt-4">
            <button type="submit" name="accion" value="borrador" class="btn btn-secondary me-2">
                Guardar borrador
            </button>
            <button type="submit" name="accion" value="finalizar" class="btn btn-primary">
                Finalizar evaluación
            </button>
            <a asp-action="Index" class="btn btn-outline-secondary ms-2">
                Cancelar
            </a>
        </div>
    </form>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
